<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="@color/colorPrimary"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/header_left_small"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center"
        android:background="@drawable/btn_header_selector"
        android:contentDescription="@string/app_name"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:src="@mipmap/ico_left"
        android:visibility="invisible" />
    <ImageButton
        android:id="@+id/header_left_small2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center"
        android:background="@drawable/btn_header_selector"
        android:contentDescription="@string/app_name"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
        android:visibility="gone" />
    <RelativeLayout
        android:id="@+id/titleAndIcon"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:gravity="center">
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5.0dip"
            android:layout_centerVertical="true"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>


    <ImageButton
        android:id="@+id/header_right_small"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center"
        android:background="@drawable/btn_header_selector"
        android:contentDescription="@string/app_name"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/top_right_btn"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/header_right_complete"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center"
        android:background="@drawable/btn_header_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="完成"
        android:textColor="@android:color/white"
        android:visibility="gone" />
</LinearLayout>
